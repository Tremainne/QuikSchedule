<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_initial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/initial_background"
    tools:context="group22.quikschedule.InitialActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold|italic"
        android:text="Welcome to QuikSchedule!"
        android:textColor="@color/colorPrimary"/>

    <!--
    <ImageView
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/qsicon_gplay"
        android:id="@+id/imageView7"
        android:layout_weight="1.75" /> -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:weightSum="1"
        android:layout_weight="0.74">

        <TextView
            android:text="Please sign into Google to continue:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:layout_marginTop="60dp"
            android:layout_weight="0.15" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_login"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/common_signin_button_text_long" />

    </LinearLayout>

</LinearLayout>


